{
	"name": "__MSG_ext_name__",
	"description": "StreamNation",
	"version": "0.1.0",
	"manifest_version": 2,
	"default_locale": "en",
	"icons": {
		"256": "img/icon256.png"
	},
	"content_scripts": [{
		"matches": ["http://*/*", "https://*/*"],
		"js": ["js/lib/jquery-2.1.1.min.js", "js/lib/sha1.js", "js/content.js"],
		"css": ["css/style.css"],
		"run_at": "document_start"
	}],
	"background" : {
		"scripts": ["js/lib/jquery-2.1.1.min.js", "js/background.js"]
	},
	"options_page": "options.html",
	"permissions": [
		"storage",
		"tabs",
		"contextMenus",
		"https://api.streamnation.com/*"
	],
	"web_accessible_resources": ["img/icon25.png", "img/littleloader.gif"],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"browser_action": {
		"default_icon": "img/icon256.png",
		"default_popup": "popup.html",
		"default_title": "StreamNation"
	}
}
